<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Freexit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/app_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/app_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/app_pink</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Splash" parent="Theme.Freexit">
        <item name="android:windowSplashScreenBackground">@color/app_pink</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/app_pink</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_image</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Freexit</item>

        <item name="android:statusBarColor">@color/app_pink</item>
        <item name="android:navigationBarColor">@color/app_pink</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ShapeableImageView" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">4%</item>
        <item name="cornerSizeTopRight">4%</item>
        <item name="cornerSizeBottomLeft">4%</item>
        <item name="cornerSizeBottomRight">4%</item>
    </style>

    <style name="TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:popupBackground">@drawable/background_spinner_rounded</item>
    </style>

</resources>